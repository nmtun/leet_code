/**
 * @param {number[]} arr
 * @param {Function} fn
 * @return {number[]}
 */
var map = function(arr, fn) {
    var newArray = [];
    for (var i = 0; i < arr.length; i++) {
        newArray[i] = fn(arr[i], i);
    }
    return newArray;
};
// Example 1
var result1 = map([1, 2, 3], function plusone(n) { return n + 1; });
console.log(result1); // [2, 3, 4]

// Example 2
var result2 = map([1, 2, 3], function plusI(n, i) { return n + i; });
console.log(result2); // [1, 3, 5]

// Example 3
var result3 = map([10, 20, 30], function constant() { return 42; });
console.log(result3); // [42, 42, 42]
